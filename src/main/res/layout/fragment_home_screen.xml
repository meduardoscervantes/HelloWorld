<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/HomeScreenFragment"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeScreenFragment">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/defaultPadding">
        <TextView
            android:id="@+id/FHS_username_TV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="USER NAME"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Current bank amount according to the information given: (x)"
            />
        <TextView
            android:id="@+id/FHS_rate_TV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Weekly spending is = (x)"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="You have saved (x) amount from //percentage amount from the amount yopu would have liked to save"
            />
        <TextView
            android:id="@+id/FHS_accounts"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="36dp"
            android:text="Check Out Accounts"/>
        <TextView
            android:id="@+id/FHS_expenses"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="36dp"
            android:text="Check Out Expenses"/>
    </LinearLayout>
    <!-- TODO add navigation bar eventually!! -->
    <include layout="@layout/nav_bar_layout"/>
</RelativeLayout>
