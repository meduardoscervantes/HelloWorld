<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/my_nav"
    app:startDestination="@id/splashScreenFragment">

    <fragment
        android:id="@+id/firstTimeInfoFragment"
        android:name="com.example.j_m_financial_10.FirstTimeInfoFragment"
        android:label="fragment_first_time_info"
        tools:layout="@layout/fragment_first_time_info" >
        <action
            android:id="@+id/action_firstTimeInfoFragment_to_homeScreenFragment"
            app:destination="@id/homeScreenFragment" />
    </fragment>
    <fragment
        android:id="@+id/homeScreenFragment"
        android:name="com.example.j_m_financial_10.HomeScreenFragment"
        android:label="fragment_home_screen"
        tools:layout="@layout/fragment_home_screen" >
        <action
            android:id="@+id/action_homeScreenFragment_to_budgetInfoFragment"
            app:destination="@id/budgetInfoFragment" />
        <action
            android:id="@+id/action_homeScreenFragment_to_accountFragment"
            app:destination="@id/accountFragment" />
    </fragment>
    <fragment
        android:id="@+id/budgetInfoFragment"
        android:name="com.example.j_m_financial_10.BudgetInfoFragment"
        android:label="fragment_budget_info"
        tools:layout="@layout/fragment_budget_info" >
        <action
            android:id="@+id/action_budgetInfoFragment_to_homeScreenFragment"
            app:destination="@id/homeScreenFragment" />
        <action
            android:id="@+id/action_budgetInfoFragment_to_monthlyExpensesFragment"
            app:destination="@id/monthlyExpensesFragment" />
    </fragment>
    <fragment
        android:id="@+id/accountFragment"
        android:name="com.example.j_m_financial_10.AccountFragment"
        android:label="fragment_account"
        tools:layout="@layout/fragment_account" >
        <action
            android:id="@+id/action_accountFragment_to_homeScreenFragment"
            app:destination="@id/homeScreenFragment" />
    </fragment>
    <fragment
        android:id="@+id/splashScreenFragment"
        android:name="com.example.j_m_financial_10.SplashScreenFragment"
        android:label="fragment_splash_screen"
        tools:layout="@layout/fragment_splash_screen" >
        <action
            android:id="@+id/action_splashScreenFragment_to_firstTimeInfoFragment"
            app:destination="@id/firstTimeInfoFragment" />
        <action
            android:id="@+id/action_splashScreenFragment_to_homeScreenFragment"
            app:destination="@id/homeScreenFragment" />
    </fragment>
    <fragment
        android:id="@+id/monthlyExpensesFragment"
        android:name="com.example.j_m_financial_10.MonthlyExpensesFragment"
        android:label="fragment_monthly_expenses"
        tools:layout="@layout/fragment_monthly_expenses" >
        <action
            android:id="@+id/action_monthlyExpensesFragment_to_homeScreenFragment"
            app:destination="@id/homeScreenFragment" />
        <action
            android:id="@+id/action_monthlyExpensesFragment_to_budgetInfoFragment"
            app:destination="@id/budgetInfoFragment" />
    </fragment>
</navigation>
